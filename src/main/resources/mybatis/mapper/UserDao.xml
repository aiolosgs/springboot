<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.codegenius.shop.web.mapper.UserDao">
    <select id="getUserById" resultType="com.codegenius.shop.web.entity.User">
        select * from user where id = #{id}
    </select>
    
    <select id="getUserByLoginName" resultType="com.codegenius.shop.web.entity.User">
    	select * from user where login_name = #{loginName}
    </select>
    
    <insert id="save">
    	insert into user values (#{id},#{name},'1',now(),#{loginName},'1',#{password},#{salt})
    </insert>
</mapper>